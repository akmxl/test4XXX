<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:x="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/map_bg_bubble_normal"
    android:paddingLeft="16dip"
    android:paddingRight="16dip" >

    <TextView
        android:id="@+id/from_txt"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:text="@string/call_confirm_from"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/from_pos"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/from_txt"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/from_txt"
        android:singleLine="true"
        android:textSize="18sp" />

    <!-- <TextView -->
    <!-- android:id="@+id/around_txt" -->
    <!-- style="@style/TextView.Orange.Large" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_alignTop="@id/from_pos" -->
    <!-- android:layout_toRightOf="@id/from_pos" -->
    <!-- android:paddingLeft="2dip" -->
    <!-- android:text="@string/pop_my_loc_name_around" -->
    <!-- android:textSize="18sp" /> -->

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="18dip"
        android:layout_height="15dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="11dip"
        android:paddingRight="10dip"
        android:layout_toRightOf="@id/from_pos"
        android:src="@drawable/common_icn_arrow" />

    <TextView
        android:id="@+id/to_txt"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/from_txt"
        android:layout_below="@id/from_txt"
        android:paddingBottom="5dip"
        android:text="@string/call_confirm_to"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/to_pos"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/to_txt"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/to_txt"
        android:maxWidth="240dip"
        android:paddingBottom="5dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:textSize="18sp" />

</RelativeLayout>